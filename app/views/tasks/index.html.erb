<h1>Your tasks</h1>
<% @tasks.each do |task| %>
  <ul>
  <li><%= link_to task.description, edit_task_path(task.id) %> <%= task.priority %> <%= task.due_date %> <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
  </ul>
<% end %>
<h2><%= link_to "Add new task", new_task_path %></h2>

